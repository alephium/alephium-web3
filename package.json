{
  "license": "GPL",
  "type": "commonjs",
  "dependencies": {
    "@alephium/cli": "workspace:*",
    "@alephium/web3": "workspace:*",
    "@alephium/web3-test": "workspace:*",
    "@alephium/web3-wallet": "workspace:*"
  },
  "devDependencies": {
    "@swc/core": "^1.4.1",
